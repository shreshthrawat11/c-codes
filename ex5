#include <stdio.h>

void printName(char name[]);

int main()
{
    char name[100];
    printf("Enter full name: ");
    gets(name);   // for full line input

    printName(name);
    return 0;
}

void printName(char name[])
{
    int i = 0;

    // first name initial
    printf("%c. ", name[i]);

    // skip first name
    while (name[i] != ' ' && name[i] != '\0')
        i++;

    i++; // move to middle name

    // middle name initial (if any)
    if (name[i] != '\0')
    {
        printf("%c. ", name[i]);

        while (name[i] != ' ' && name[i] != '\0')
            i++;
        i++;
    }

    // last name
    while (name[i] != '\0')
    {
        printf("%c", name[i]);
        i++;
    }
}